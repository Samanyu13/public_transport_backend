    </nav>
    <!-- ************************************** NAVBAR ************************************** -->

    <div>
        <%
        // ************************************** Format Date **************************************
        function formatDate(date) {
            d = new Date(date);
      
            var monthNames = [
                "January", "February", "March",
                "April", "May", "June", "July",
                "August", "September", "October",
                "November", "December"
            ];
            var day = d.getDate();
            var monthIndex = d.getMonth();
            var year = d.getFullYear();
            return day + ' ' + monthNames[monthIndex] + ' ' + year;
        }
        // ************************************** Format Date **************************************

        var map = new Map();
        map[0] = '6AM to 12PM (Morning)';
        map[1] = '12PM to 6PM (Evening)';
        map[2] = '6PM to 6AM (Night)';
        %>
        <table>
            <th>ROUTE ID</th>
            <th>TIME FRAME</th>
            <th>DATE</th>
            <th>CONFIRM</th>
            <% for(let i = 0; i < data.length; i++) { %>
            <tr>
                <td><%= data[i].route_id %></td>
                <td><%= map[data[i].time_frame] %></td>
                <td><%= formatDate(data[i].date) %></td>
                <%  let val = data[i].id; 
                    let url = './verification/' + val;
                %>
                <td><a href=<%=url%>>Click Here</a></td>
            </tr>
            <% } %>
        </table>
    </div>


</body>

